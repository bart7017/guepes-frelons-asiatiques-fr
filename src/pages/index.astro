---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import Features from '@components/sections/Features.astro';
import Stats from '@components/sections/Stats.astro';
import { featureLists } from '@data/features';
import { statsLists } from '@data/stats';
import Logos from '@components/sections/Logos.astro';
import { logoLists } from '@data/logos';
import CtaBanner from '@components/sections/CtaBanner.astro';
import Faqs from '@components/sections/Faqs.astro';
import { faqLists } from '@data/faqs';
import RecentPosts from '@components/sections/RecentPosts.astro';
import heroImage from '../assets/images/home/default-hero-2.jpg';
import styleGuideImage from '../assets/images/home/developer.jpg';

const seoTitle = "Destruction de Nids de Guêpes et Frelons en Île-de-France | 77";
const seoDescription = "Service professionnel d'élimination de nids de guêpes et frelons en Île-de-France. Intervention rapide dans le 77, Melun et environs par des techniciens certifiés.";
const heroContent = {
    title: 'Destruction Professionnelle de Nids de Guêpes et Frelons',
    description: 'Intervention rapide et sécurisée en Île-de-France, par des techniciens certifiés. Protégez votre famille et votre propriété des risques liés aux nids de guêpes avec notre expertise de plus de 15 ans.',
    buttons: [
        {
            text: 'Intervention d\'urgence',
            link: '/contact',
            variant: 'primary',
            target: '_self'
        },
        {
            text: 'Nos tarifs',
            link: '/tarifs',
            variant: 'secondary',
            target: '_self'
        }
    ],
    backgroundImage: heroImage, // Remplacez par votre image d'un nid de guêpes
    overlayOpacity: 0.12
}

const featuresSection = {
    eyebrow: "NOS SERVICES",
    title: "Destruction Professionnelle de Nids de Guêpes",
    description: "Service rapide et efficace d'élimination de nids de guêpes et frelons en Île-de-France, spécialisé dans le département 77 et la région de Melun.",
    features: featureLists.main.features,
    button: {
        text: "Demander une intervention",
        link: "/contact",
        variant: "primary" as const
    }
}

const FooterCta = {
    eyebrow: "Intervention Rapide",
    title: 'Éliminez vos nids de guêpes dès aujourd\'hui',
    description: 'Ne prenez pas de risques inutiles avec les guêpes et frelons. Nos techniciens certifiés interviennent rapidement dans tout le 77 et l\'Île-de-France pour une élimination sécurisée des nids.',
    hideCta: false,
    button: {
        text: 'Demander un devis gratuit',
        link: '/contact',
        target: '_self'
    }
}

const styleGuideSection = {
    eyebrow: "Notre expertise",
    headline: "Une méthode éprouvée et sécurisée",
    description: "Notre équipe d'experts intervient dans le 77 et toute l'Île-de-France pour éliminer efficacement les nids de guêpes et frelons. Nous utilisons du matériel professionnel et des produits homologués pour garantir votre sécurité.",
    image: {
        src: styleGuideImage, // Remplacez par une image montrant un technicien en tenue de protection
        alt: "Technicien en intervention sur un nid de guêpes"
    },
    buttons: [
        {
            text: "Nos méthodes d'intervention",
            link: "/methodes",
            variant: "primary" as const
        }
    ]
}

const sideBySideStats = {
    eyebrow: "Notre Efficacité",
    title: "Des résultats prouvés contre les nids de guêpes",
    description: "Notre expertise dans la destruction des nids de guêpes et frelons s'appuie sur des méthodes éprouvées et un matériel professionnel. Nous intervenons rapidement pour garantir votre sécurité.",
    variant: 'side-by-side' as const,
    stats: statsLists.withContent.stats,
    content: {
        title: "Spécialistes de la destruction de nids depuis 15 ans",
        description: "Que le nid soit situé sous toiture, dans un mur, dans le sol ou dans un arbre, notre équipe possède l'expertise nécessaire pour le localiser et l'éliminer en toute sécurité, partout en Seine-et-Marne et en Île-de-France.",
        button: {
            text: "Découvrir notre expertise",
            link: "/a-propos",
            variant: "primary" as const
        }
    }
};
const mainCta = {
    eyebrow: "Besoin d'Aide Urgente ?",
    title: "Nid de guêpes ou frelons à éliminer ?",
    description: "Les nids de guêpes représentent un danger réel pour vous et votre famille. Ne tentez pas de les éliminer vous-même. Nos techniciens interviennent avec le matériel adapté pour une destruction sécurisée et efficace de tous types de nids.",
    button: {
        text: "Contacter un spécialiste",
        link: "/contact",
        variant: "primary" as const,
        target: "_self" as const
    }
};


const logosSection = {
    eyebrow: "Ils nous font confiance",
    logos: logoLists.main.logos
}

const faqsSection = {
    eyebrow: "Questions fréquentes",
    title: 'Ce que vous devez savoir sur les nids de guêpes',
    description: 'Trouvez des réponses aux questions les plus fréquentes concernant les nids de guêpes et notre service d\'élimination.',
    faqs: faqLists.main.faqs
}

const recentPostsSection = {
    eyebrow: "CONSEILS D'EXPERTS",
    title: "Tout savoir sur les guêpes et frelons",
    description: "Découvrez nos articles sur la prévention des nids de guêpes, les risques liés aux piqûres, et comment identifier les différentes espèces de guêpes et frelons en Île-de-France.",
    button: {
        text: "Voir tous nos conseils",
        link: "/blog",
        variant: "primary" as const
    }
}
---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <Features content={featuresSection} padding="base" background="light" />
    <RecentPosts content={recentPostsSection} background="base" padding="base" postsToShow={3} category="Theme Usage"/>
    <SplitPanel content={styleGuideSection} imagePosition="right" background="light" padding="base" />
    <CtaBanner content={mainCta} variant="contained" background="light" paddingBottom="base" />
    <Logos content={logosSection} background="base" padding='small'/>
    <Stats content={sideBySideStats} background='dark' padding="base"/>
    <Faqs content={faqsSection} background="base" padding="base" />
</Layout>